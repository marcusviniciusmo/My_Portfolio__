// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}


model Profile {
  user_ID String @id
  name String
  role String
  curriculum String
}

model Blogs {
  blog_ID String @id
  user_ID String
  name String
  image String
  url String
}

model Certificates {
  certificate_ID String @id
  user_ID String
  name String
  image String
  workload String?
  instructor String?
  institution String?
  conclusion String
  type String
  score String?
  sharingLink String?
  area String
}

model CertificateAreas {
  area_ID String @id
  areaDescription String
}

model CertificateTypes {
  type_ID String @id
  typeDescription String
}

model Experiences {
  experience_ID String @id
  user_ID String
  period String
  title String
  institution String
}

model Expertises {
  expertise_ID String @id
  user_ID String
  title String
  text String
  iconClassName String
  icon String
}

model Graduations {
  graduation_ID String @id
  user_ID String
  period String
  title String
  institution String
}

model Icons {
  icon_ID String @id
  iconDescription String
}

model Knowledges {
  knowledge_ID String @id
  user_ID String
  description String
}

model MenuItems {
  menuItem_ID String @id
  user_ID String
  to String
  label String
  icon String
}

model ProfileInfo {
  profileInfo_ID String @id
  user_ID String
  className String
  label String
  link String?
  data String
  icon String
}

model Skills {
  skill_ID String @id
  user_ID String
  description String
  percentage Int
}

model SocialNetworks {
  socialNetwork_ID String @id
  user_ID String
  className String
  title String
  link String
  icon String
}
